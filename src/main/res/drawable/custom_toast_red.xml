<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

// The width and color of the border
    <solid
        android:width="1dp"
        android:color="@color/colorMaterialRed"
        />

// The desired corner radius. reduce it to keep it less rounded
<corners android:topRightRadius="@dimen/roundToastValue"
    android:bottomRightRadius="@dimen/roundToastValue"
    android:topLeftRadius="@dimen/roundToastValue"
    android:bottomLeftRadius="@dimen/roundToastValue"   />

// Add your desired padding
<padding
    android:left="8dp"
    android:top="8dp"
    android:right="8dp"
    android:bottom="8dp"    >
</padding>

</shape>
