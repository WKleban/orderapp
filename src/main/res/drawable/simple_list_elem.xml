<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="rectangle">

// The width and color of the border
<solid
    android:width="1dp"
    android:color="@color/colorWhite"
    />

// The desired corner radius. reduce it to keep it less rounded
<corners android:topRightRadius="@dimen/Value0"
    android:bottomRightRadius="@dimen/Value0"
    android:topLeftRadius="@dimen/Value0"
    android:bottomLeftRadius="@dimen/Value0"  />

// Add your desired padding
<padding
    android:left="8dp"
    android:top="8dp"
    android:right="8dp"
    android:bottom="8dp"    >
</padding>

</shape>
